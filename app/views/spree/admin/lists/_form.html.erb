<div>
  <%= f.field_container :store, class: ['form-group'] do %>
    <%= f.label :store, Spree.t(:store , scope: :list) %> <span class="required">*</span>
    <%= f.select :store_id, Spree::Store.all.collect{ |l| [l.name, l.id] }, {include_blank: true}, {class: 'select2', "data-placeholder" => Spree.t(:select_a_store)} %>
    <%= f.error_message_on :store %>
  <% end %>

  <%= f.field_container :key, class: ["form-group"] do %>
    <%= f.label :key, Spree.t(:id, scope: :list) %> <span class="required">*</span>
    <%= f.text_field :key, class: 'form-control' %>
    <%= f.error_message_on :key %>
  <% end %>

  <%= f.field_container :name, class: ["form-group"] do %>
    <%= f.label :name, Spree.t(:name, scope: :list) %> <span class="required">*</span>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :default_list, class: ['form-group'] do %>
    <%= f.label :default_list, Spree.t(:default) %>
    <%= f.check_box :default_list%>
    <%= f.error_message_on :default_list %>
  <% end %>
</div>
