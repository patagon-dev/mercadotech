<% if payment.respond_to?(:webpay_params) && payment.webpay_params.present? %>
  <dl>
    <table class="table">
      <tr>
        <td><b><%= Spree.t("webpay_payment_type") %></b></td>
        <td><%= payment.oneclick_params_payment_type_code %></td>
      </tr>
      <tr>
        <td><b><%= Spree.t("webpay_order_number") %></b></td>
        <td><%= payment.oneclick_params_buy_order %></td>
      </tr>
      <% unless @order.completed_at.nil? %>
        <tr>
          <td><b><%= Spree.t("webpay_trx_date") %></b></td>
          <td><%= @order.completed_at.to_s(:db) %></td>
        </tr>
      <% end %>
      <tr>
        <td><b><%= Spree.t("webpay_card_number") %></b></td>
        <td><%= payment.oneclick_params_card_number %></td>
      </tr>
      <tr>
        <td><b><%= Spree.t("webpay_auth_code") %></b></td>
        <td><%= payment.oneclick_params_authorization_code %></td>
      </tr>
      <tr>
        <td><b>Webpay params</b></td>
        <td><%=payment.webpay_params %></td>
      </tr>
      <tr>
        <td><b>Response code</b></td>
        <td><%= payment.oneclick_params_response_code %></td>
      </tr>
    </table>
  </dl>
<% end %>
<%= render partial: 'spree/admin/shared/refund_history', locals: { refund_history: @refund_history } %>