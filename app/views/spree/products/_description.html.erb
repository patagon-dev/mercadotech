<h3 class="pt-0 mt-0 font-weight-bold text-uppercase product-details-subtitle"><%= Spree.t(:description) %></h3>
<div id="product-description-short" class="m-0 text-break product-description" data-hook="description">
  <%= sanitize product_description(@product).truncate(900), tags: %w(img strong p h3 h4 h5 h6 ol li ul), attributes: %w(src style center alt border hspace vspace &trade &reg border class)  %>
</div>

<div id="product-description-long" class="m-0 text-break product-description d-none" data-hook="description">
  <%= sanitize product_description(@product), tags: %w(img strong p h3 h4 h5 h6 ol li ul), attributes: %w(src style center alt border hspace vspace &trade &reg border class) %>
</div>

<% if product_description(@product).length > 900 %>
  <span id="product-description-arrow" class="d-flex justify-content-center align-items-center mt-3 mx-auto product-description-arrow" aria-hidden="true", style="width: 100%;">
    <button type="button" class="btn btn-secondary rounded ml-3"><span> <%= Spree.t(:show_more) %> </span>
      <%= icon(name: 'arrow-right', classes: 'spree-icon-arrow spree-icon-arrow-down', width: 15, height: 15) %>
   	</button>
  </span>
<% end %>
